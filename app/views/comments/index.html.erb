<% @comments.each do |comment| %>
  <article class="comment" data-line="<%= comment.line %>">
    <p><%= comment.user_id %> <span class="gray">@</span> <%= comment.created_at %></p>
    <div class="callout">
      <h4><%= comment.title %></h4>
      <%= simple_format(comment.text) %>
      <b class="notch"></b>
    </div>
  </article>
<% end %>